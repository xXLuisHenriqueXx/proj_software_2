{
  "name": "re.brinque",
  "version": "1.0.0",
  "main": "src/app.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec npx tsx --env-file=.env src/server.ts",
    "start": "npx tsx --env-file=.env src/server.ts",
    "build": "tsup src/app.ts --format cjs,esm --dts --out-dir dist",
    "prisma:all": "npm run prisma:generate && npm run prisma:migrate:dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "prisma db seed",
    "test": "jest --detectOpenHandles"
  },
  "dependencies": {
    "@fastify/multipart": "^9.1.0",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.34.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
